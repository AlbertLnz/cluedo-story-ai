generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./game.db"
}

model Game {
  id                 String   @id @default(cuid())
  history            String
  solution           String
  characters         String
  impostor_character String
  language           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
